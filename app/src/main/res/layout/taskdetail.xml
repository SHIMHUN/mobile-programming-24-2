<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 할일 제목이 상단에 표시됨 -->
        <TextView
            android:id="@+id/tv_task_detail_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- 할일 설명 -->
        <TextView
            android:id="@+id/tv_task_detail_description_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_task_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample Task Description"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- 할일 날짜 -->
        <TextView
            android:id="@+id/tv_task_detail_date_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_task_detail_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="07/28/2022"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- 할일 시간 -->
        <TextView
            android:id="@+id/tv_task_detail_time_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_task_detail_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="21:26 PM"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- 할일 우선순위 -->
        <TextView
            android:id="@+id/tv_task_detail_priority_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Priority"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_task_detail_priority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- 수정 버튼 -->
        <Button
            android:id="@+id/btn_edit_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="수정하기"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>